---
import ContactInfo from '../contact/ContactInfo.tsx'
import ContactForm from '../contact/ContactForm.tsx'
import { CONTACT } from '../../mocks/index.tsx'

const { aboutProject } = CONTACT
---

<section id='contact' class='py-15'>
  <div class='max-w-7xl mx-auto px-6'>
    <div class='grid md:grid-cols-2 gap-12 mt-10'>
      <ContactInfo />
      <!-- Lado Derecho: Formulario de contacto -->
      <div class='flex flex-col gap-6'>
        <h3 class='text-lg font-medium'>{aboutProject}</h3>
        <ContactForm client:load />
      </div>
    </div>
  </div>
</section>
